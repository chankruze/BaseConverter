<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_1"
                style="@style/NormalKeys"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_1"
                android:textSize="24sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_2"
                style="@style/NormalKeys"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_2"
                android:textSize="24sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_3"
                style="@style/NormalKeys"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_3"
                android:textSize="24sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_4"
                style="@style/NormalKeys"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_4"
                android:textSize="24sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_5"
                style="@style/NormalKeys"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_5"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_6"
                style="@style/NormalKeys"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_6"
                android:textSize="24sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_7"
                style="@style/NormalKeys"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_7"
                android:textSize="24sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_8"
                style="@style/NormalKeys"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_8"
                android:textSize="24sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_9"
                style="@style/NormalKeys"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_9"
                android:textSize="24sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_0"
                style="@style/NormalKeys"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_0"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_a"
                style="@style/NormalKeys"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_a"
                android:textSize="24sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_b"
                style="@style/NormalKeys"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_b"
                android:textSize="24sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_c"
                style="@style/NormalKeys"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_c"
                android:textSize="24sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_d"
                style="@style/NormalKeys"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_d"
                android:textSize="24sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_e"
                style="@style/NormalKeys"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_e"
                android:textSize="24sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_f"
                style="@style/NormalKeys"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_f"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_delete"
            style="@style/ActionKeys.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_delete" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_reset"
            style="@style/ActionKeys.Danger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_reset" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_convert"
            style="@style/ActionKeys.Success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_convert" />
    </LinearLayout>
</LinearLayout>